				"lock_mode"
			],
			"images": {
				"large": "/drivers/pet-door-connect/assets/images/large.png",
				"small": "/drivers/pet-door-connect/assets/images/small.png"
			},
			"pair": [
				{
					"id": "login_credentials"
				},
				{
					"id": "list_devices",
					"template": "list_devices",
					"navigation": {
						"next": "add_device"
					}
				},
				{
					"id": "add_device",
					"template": "add_devices"
				}
			]
		}
